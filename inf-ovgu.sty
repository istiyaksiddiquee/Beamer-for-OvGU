\AtBeginSection[]{
	\begin{frame}
		\tableofcontents[sectionstyle=show/hide,subsectionstyle=show/hide,subsubsectionstyle=show/hide]
	\end{frame}
}
\AtBeginSubsection[]{
	\begin{frame}
		\tableofcontents[sectionstyle=show/hide,subsectionstyle=show/shaded/hide,subsubsectionstyle=show/shaded/hide]
	\end{frame}
}

